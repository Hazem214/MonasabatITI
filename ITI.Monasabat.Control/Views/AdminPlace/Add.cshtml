@{
    Layout = "_Layout2";
}
@model AddViewModel
<h2 class="p-2 bg-light border text-center">Add Place</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
<form role="form"  method="post" action="/AdminPlace/Add" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name"  >
        <span asp-validation-for="Name"></span>

  </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="text" class="form-control" asp-for="Price">
        <span asp-validation-for="Price"></span>

    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input type="text" class="form-control" asp-for="Type">
        <span asp-validation-for="Type"></span>

    </div>

    <div class="form-group">
        <label asp-for="Images"></label>
        <input type="file" class="form-control" class="form-control" asp-for="Images"  multiple>
        <span asp-validation-for="Images"></span>
    </div>

    <div class="form-group">
        <label asp-for="CityID"></label>
        <select class="form-control" asp-for="CityID" asp-items="@ViewBag.Cities">
        </select>
        <span asp-validation-for="CityID"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlaceOwnerID"></label>
        <select class="form-control" asp-for="PlaceOwnerID" asp-items="@ViewBag.Owners">
        </select>
        <span asp-validation-for="PlaceOwnerID"></span>
    </div>
 
        <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
</div>
</div>



